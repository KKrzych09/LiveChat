{"ast":null,"code":"import SignupForm from '../components/SignupForm.vue';\nimport LoginForm from '../components/LoginForm.vue';\nimport { ref } from '@vue/reactivity';\nimport { useRouter } from 'vue-router';\nimport firebase from 'firebase/app';\nexport default {\n  components: {\n    SignupForm,\n    LoginForm\n  },\n\n  setup() {\n    const showLogin = ref(true);\n    const router = useRouter(); // Handling redirection to the chat room with custom event provided by LoginForm.vue\n\n    const enterChat = () => {\n      router.push({\n        name: 'chatroom'\n      });\n    }; // Signing in with Google\n\n\n    const googleSignIn = () => {\n      let provider = new firebase.auth.GoogleAuthProvider();\n      firebase.auth().signInWithPopup(provider).then(() => {}).catch(err => {\n        console.log(err);\n      });\n    };\n\n    return {\n      showLogin,\n      enterChat,\n      googleSignIn\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAkBA,OAAOA,UAAP,MAAuB,8BAAvB;AACA,OAAOC,SAAP,MAAsB,6BAAtB;AACA,SAASC,GAAT,QAAoB,iBAApB;AACA,SAASC,SAAT,QAA0B,YAA1B;AACA,OAAOC,QAAP,MAAqB,cAArB;AAEA,eAAe;EACXC,UAAU,EAAE;IAAEL,UAAF;IAAcC;EAAd,CADD;;EAEXK,KAAK,GAAG;IACJ,MAAMC,SAAQ,GAAIL,GAAG,CAAC,IAAD,CAArB;IACA,MAAMM,MAAK,GAAIL,SAAS,EAAxB,CAFI,CAIJ;;IACA,MAAMM,SAAQ,GAAI,MAAM;MACpBD,MAAM,CAACE,IAAP,CAAY;QAAEC,IAAI,EAAE;MAAR,CAAZ;IACJ,CAFA,CALI,CASJ;;;IACA,MAAMC,YAAW,GAAI,MAAM;MACvB,IAAIC,QAAO,GAAI,IAAIT,QAAQ,CAACU,IAAT,CAAcC,kBAAlB,EAAf;MACAX,QAAO,CACFU,IADL,GAEKE,eAFL,CAEqBH,QAFrB,EAGKI,IAHL,CAGU,MAAM,CACX,CAJL,EAKCC,KALD,CAKQC,GAAD,IAAS;QACZC,OAAO,CAACC,GAAR,CAAYF,GAAZ;MACH,CAPD;IAQJ,CAVA;;IAYA,OAAO;MAAEZ,SAAF;MAAaE,SAAb;MAAwBG;IAAxB,CAAP;EACJ;;AAzBW,CAAf","names":["SignupForm","LoginForm","ref","useRouter","firebase","components","setup","showLogin","router","enterChat","push","name","googleSignIn","provider","auth","GoogleAuthProvider","signInWithPopup","then","catch","err","console","log"],"sourceRoot":"","sources":["/Users/kamil/Desktop/Programowanie/JavaScript/Vue/live-chat/src/views/WelcomeView.vue"],"sourcesContent":["<template>\n    <div class=\"welcome container\">\n        <p>Welcome</p>\n        <div v-if=\"showLogin\">\n            <h2>Login</h2>\n            <LoginForm @login=\"enterChat\" />\n            <p>No account yet? <span @click=\"showLogin = false\">Signup</span> instead</p>\n            <button @click=\"googleSignIn\">Log in with Google</button>\n        </div>\n        <div v-else>\n            <h2>Sign up</h2>\n            <SignupForm @signup=\"enterChat\" />\n            <p>Already registered? <span @click=\"showLogin = true\">Login</span> instead</p>\n        </div>\n    </div>\n</template>\n\n<script>\nimport SignupForm from '../components/SignupForm.vue'\nimport LoginForm from '../components/LoginForm.vue'\nimport { ref } from '@vue/reactivity'\nimport { useRouter } from 'vue-router'\nimport firebase from 'firebase/app'\n\nexport default {\n    components: { SignupForm, LoginForm },\n    setup() {\n        const showLogin = ref(true)\n        const router = useRouter()\n\n        // Handling redirection to the chat room with custom event provided by LoginForm.vue\n        const enterChat = () => {\n            router.push({ name: 'chatroom' })\n        }\n\n        // Signing in with Google\n        const googleSignIn = () => {\n            let provider = new firebase.auth.GoogleAuthProvider()\n            firebase\n                .auth()\n                .signInWithPopup(provider)\n                .then(() => {\n                })\n            .catch((err) => {\n                console.log(err)\n            });\n        }\n\n        return { showLogin, enterChat, googleSignIn }\n    }\n }\n</script>\n\n<style>\n    .welcome {\n        text-align: center;\n        padding: 20px 0;\n    }\n    /* form styles */\n    .welcome form {\n        width: 300px;\n        margin: 20px auto;\n    }\n    .welcome label {\n        display: block;\n        margin: 20px 0 10px;\n    }\n    .welcome input {\n        width: 100%;\n        padding: 10px;\n        border-radius: 20px;\n        border: 1px solid #eee;\n        outline: none;\n        color: #999;\n        margin: 10px auto;\n    }\n    .welcome span {\n        font-weight: bold;\n        text-decoration: underline;\n        cursor: pointer;\n    }\n    .welcome button {\n        margin: 20px auto;\n    }\n</style>"]},"metadata":{},"sourceType":"module"}