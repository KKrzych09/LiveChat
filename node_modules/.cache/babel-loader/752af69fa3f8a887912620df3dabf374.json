{"ast":null,"code":"import getUser from '@/composables/getUser';\nimport { useRouter } from 'vue-router';\nimport { ref, watch } from '@vue/runtime-core';\nimport ChangePassword from '../components/ChangePassword.vue';\nexport default {\n  components: {\n    ChangePassword\n  },\n\n  setup() {\n    const showProfile = ref(true);\n    const {\n      user\n    } = getUser();\n    const router = useRouter();\n    watch(user, () => {\n      if (!user.value) {\n        router.push({\n          name: 'welcome'\n        });\n      }\n    });\n    return {\n      user,\n      showProfile\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAsBA,OAAOA,OAAP,MAAoB,uBAApB;AACA,SAASC,SAAT,QAA0B,YAA1B;AACA,SAASC,GAAT,EAAcC,KAAd,QAA2B,mBAA3B;AACA,OAAOC,cAAP,MAA2B,kCAA3B;AAEA,eAAe;EACXC,UAAU,EAAE;IAAED;EAAF,CADD;;EAEXE,KAAK,GAAG;IACJ,MAAMC,WAAU,GAAIL,GAAG,CAAC,IAAD,CAAvB;IACA,MAAM;MAAEM;IAAF,IAAWR,OAAO,EAAxB;IACA,MAAMS,MAAK,GAAIR,SAAS,EAAxB;IAEAE,KAAK,CAACK,IAAD,EAAO,MAAM;MACd,IAAI,CAACA,IAAI,CAACE,KAAV,EAAiB;QACbD,MAAM,CAACE,IAAP,CAAY;UAAEC,IAAI,EAAE;QAAR,CAAZ;MACJ;IACH,CAJI,CAAL;IAMA,OAAO;MAAEJ,IAAF;MAAQD;IAAR,CAAP;EACJ;;AAdW,CAAf","names":["getUser","useRouter","ref","watch","ChangePassword","components","setup","showProfile","user","router","value","push","name"],"sourceRoot":"","sources":["/Users/kamil/Desktop/Programowanie/JavaScript/Vue/live-chat/src/views/ProfileView.vue"],"sourcesContent":["<template>\n    <div class=\"container\" v-if=\"user\">\n        <div class=\"card\" v-if=\"showProfile\">\n                <div class=\"card-img\">\n                    <img src=\"#\" alt=\"#\">\n                </div>\n\n                <div class=\"user-data\">\n                    <h2>{{ user.displayName }}</h2>\n                    <span>{{ user.email }}</span>\n                    <button @click=\"show\">Change password</button>\n                </div>\n\n            <button class=\"back\">Back</button>\n        </div>\n        <div v-else>\n            <ChangePassword />\n        </div>\n    </div>\n</template>\n\n<script>\nimport getUser from '@/composables/getUser'\nimport { useRouter } from 'vue-router'\nimport { ref, watch } from '@vue/runtime-core'\nimport ChangePassword from '../components/ChangePassword.vue'\n\nexport default {\n    components: { ChangePassword },\n    setup() {\n        const showProfile = ref(true)\n        const { user } = getUser()\n        const router = useRouter()\n\n        watch(user, () => {\n            if (!user.value) {\n                router.push({ name: 'welcome' })\n            }\n        })\n\n        return { user, showProfile }\n    }\n}\n</script>\n\n<style>\n    .card {\n        padding: 20px;\n        border-bottom: 1px solid #eee;\n        display: flex;\n        flex-direction: column;\n        justify-content: space-between;\n        align-items: center;\n        position: relative;\n    }\n    .back {\n        position: absolute;\n        top: 0;\n        left: 0;\n        margin: 15px 20px;\n    }\n    .card-img {\n        height: 116px;\n        width: 116px;\n        border-radius: 50%;\n        background-color: #eee;\n        margin: 15px auto 10px;\n        overflow: hidden;\n    }\n    .card-img img {\n        width: 100%;\n        height: 100%;\n        object-fit: cover;\n        object-position:70% 0%;\n    }\n    .user-data {\n        display: flex;\n        flex-direction: column;\n        align-items: center;\n    }\n    .user-data button {\n        margin-top: 20px;\n    }\n</style>"]},"metadata":{},"sourceType":"module"}